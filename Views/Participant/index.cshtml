@using Microsoft.AspNetCore.Mvc.Localization
@model IEnumerable<UbbRentalBike.ViewModels.ParticipantDto>
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "Index";
}

<h2>@Localizer["Witaj na stronie uczestnika!"]</h2>

<p>
    @Html.ActionLink("Add Participant", "Create")
</p>

<table class="table">
    <thead>
    <tr>
        <th>
            Name
        </th>
        <th>
            Surname
        </th>
        <th>
            Date of Birth
        </th>
        <th>
            Email Address
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var participant in Model)
    {
        <tr>
             <td>
                            @Html.DisplayFor(modelItem => participant.Name)
                        </td>
            <td>
                @Html.DisplayFor(modelItem => participant.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => participant.DateOfBirth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => participant.EmailAddress)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = participant.Id }) |
                @Html.ActionLink("Details", "Details", new { id = participant.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = participant.Id })
            </td>
        </tr>
    }
    </tbody>
</table>